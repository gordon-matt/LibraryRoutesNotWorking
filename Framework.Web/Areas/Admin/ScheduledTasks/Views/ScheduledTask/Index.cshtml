@{
    string rtlClass = System.Globalization.CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "k-rtl" : string.Empty;
}

<template>
    <require from="aurelia-kendoui-bridge/grid/grid"></require>
    <require from="aurelia-kendoui-bridge/grid/col"></require>
    <require from="aurelia-kendoui-bridge/common/template"></require>

    @Html.Hidden("GridPageSize", SiteSettings.DefaultGridPageSize)

    <div id="grid-section" class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 @rtlClass">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 @rtlClass">
                <ak-grid id="grid"
                         k-data-source.bind="datasource"
                         k-widget.bind="grid"
                         k-filterable.bind="true"
                         k-sortable.bind="{ allowUnsort: false }"
                         k-pageable.bind="{ refresh: true, pageSizes: false }"
                         k-scrollable.bind="false">
                    <ak-col k-field="Name" k-title="@T[FrameworkWebLocalizableStrings.General.Name]"></ak-col>
                    <ak-col k-field="Seconds" k-title="@T[FrameworkWebLocalizableStrings.ScheduledTasks.Model.Seconds]" k-filterable.bind="false" k-width.bind="70"></ak-col>
                    <ak-col k-field="Enabled" k-title="@T[FrameworkWebLocalizableStrings.General.Enabled]" k-width.bind="70" k-attributes.bind="{ class: 'text-center' }">
                        <ak-template>
                            <i class="fa ${ $this.Enabled ? 'fa-check text-success' : 'fa-times text-danger' }"></i>
                        </ak-template>
                    </ak-col>
                    <ak-col k-field="StopOnError" k-title="@T[FrameworkWebLocalizableStrings.ScheduledTasks.Model.StopOnError]" k-width.bind="70" k-attributes.bind="{ class: 'text-center' }">
                        <ak-template>
                            <i class="fa ${ $this.StopOnError ? 'fa-check text-success' : 'fa-times text-danger' }"></i>
                        </ak-template>
                    </ak-col>
                    <ak-col k-field="LastStartUtc" k-title="@T[FrameworkWebLocalizableStrings.ScheduledTasks.Model.LastStartUtc]" k-type="date" k-filterable.bind="false" k-width.bind="200" k-format="{0:G}"></ak-col>
                    <ak-col k-field="LastEndUtc" k-title="@T[FrameworkWebLocalizableStrings.ScheduledTasks.Model.LastEndUtc]" k-type="date" k-filterable.bind="false" k-width.bind="200" k-format="{0:G}"></ak-col>
                    <ak-col k-field="LastSuccessUtc" k-title="@T[FrameworkWebLocalizableStrings.ScheduledTasks.Model.LastSuccessUtc]" k-type="date" k-filterable.bind="false" k-width.bind="200" k-format="{0:G}"></ak-col>
                    <ak-col k-field="Id" k-title="&nbsp;" k-filterable.bind="false" k-width.bind="100" k-attributes.bind="{ class: 'text-center' }">
                        <ak-template>
                            <div class="btn-group">
                                <button type="button" click.delegate="runNow($this.Id)" class="btn btn-primary btn-sm" title="@T[FrameworkWebLocalizableStrings.ScheduledTasks.RunNow]">
                                    <i class="fa fa-play"></i>
                                </button>
                                <button type="button" click.delegate="edit($this.Id)" class="btn btn-default btn-sm" title="@T[FrameworkWebLocalizableStrings.General.Edit]">
                                    <i class="fa fa-edit"></i>
                                </button>
                            </div>
                        </ak-template>
                    </ak-col>
                </ak-grid>
            </div>
        </div>
    </div>

    <div id="form-section" class="row" style="display:none">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            @using (var panel = Html.KoreUI().Begin(new Panel(state: State.Primary)))
            {
                using (var header = panel.BeginHeader(T[FrameworkWebLocalizableStrings.General.Details])) { }
                using (var body = panel.BeginBody())
                {
                    <form id="form-section-form" role="form">
                        <fieldset>
                            <legend id="form-section-legend"></legend>
                            <div class="form-group">
                                @Html.Label("Name", T[FrameworkWebLocalizableStrings.ScheduledTasks.Model.Name], new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
                                <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                                    <p class="form-control-static">${name}</p>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Seconds", T[FrameworkWebLocalizableStrings.ScheduledTasks.Model.Seconds], new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
                                <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-clock-o"></i>
                                        </span>
                                        <input type="text" id="Seconds" name="Seconds" class="form-control" value.bind="seconds" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-12 col-sm-4 col-md-3 col-lg-3"></label>
                                <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="Enabled" name="Enabled" checked.bind="enabled" /> @T[FrameworkWebLocalizableStrings.ScheduledTasks.Model.Enabled]
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="StopOnError" name="StopOnError" checked.bind="stopOnError" /> @T[FrameworkWebLocalizableStrings.ScheduledTasks.Model.StopOnError]
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group pull-right">
                                    <button type="button" class="btn btn-default" click.delegate="cancel()">@T[FrameworkWebLocalizableStrings.General.Cancel]</button>
                                    <button type="button" class="btn btn-primary" click.delegate="save()"><i class="fa fa-save"></i> @T[FrameworkWebLocalizableStrings.General.Save]</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                }
            }
        </article>
    </div>
</template>